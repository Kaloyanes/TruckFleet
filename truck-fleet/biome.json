{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noArrayIndexKey": "off",
        "noExplicitAny": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off"
      }
    },
    "ignore": [
      "node_modules",
      "dist"
    ]
  },
  "formatter": {
    "enabled": true,
    "ignore": [
      "node_modules",
      "dist"
    ]
  },
  "files": {
    "ignore": [
      "node_modules",
      "dist"
    ]
  }
}
